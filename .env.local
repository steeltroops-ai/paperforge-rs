# PaperForge Local Development Environment
# Copy this to .env and update values

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgres://paperforge:paperforge_dev@localhost:5432/paperforge
DATABASE_READ_URL=
DATABASE_MAX_CONNECTIONS=10
DATABASE_MIN_CONNECTIONS=2
DATABASE_CONNECT_TIMEOUT=10
DATABASE_IDLE_TIMEOUT=300

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# AWS / LocalStack
# =============================================================================
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=http://localhost:4566
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# SQS Queue URLs (LocalStack)
INGESTION_QUEUE_URL=http://localhost:4566/000000000000/paperforge-ingestion
EMBEDDING_QUEUE_URL=http://localhost:4566/000000000000/paperforge-embedding
DLQ_URL=http://localhost:4566/000000000000/paperforge-dlq

# =============================================================================
# Embedding Provider
# =============================================================================
# Options: openai, mock
EMBEDDING_PROVIDER=mock
OPENAI_API_KEY=sk-your-key-here
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_BASE_URL=https://api.openai.com/v1

# =============================================================================
# Service Ports
# =============================================================================
GATEWAY_PORT=3000
INGESTION_GRPC_PORT=50051
SEARCH_GRPC_PORT=50052
CONTEXT_GRPC_PORT=50053

# =============================================================================
# Logging
# =============================================================================
RUST_LOG=info,paperforge=debug
RUST_BACKTRACE=1

# =============================================================================
# Local Data
# =============================================================================
# Path to local PDFs for testing
LOCAL_PDF_DIR=./data/raw
